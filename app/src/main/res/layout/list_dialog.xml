<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/DialogBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:text="Bill"
        android:textStyle="normal|bold"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/DialogName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/DialogBill"
        android:paddingLeft="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:text="Name"
        android:textSize="18sp"
        android:textStyle="normal|bold" />
    <TextView
        android:id="@+id/DialogTreat"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/DialogName"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="8dp"
        android:text="Treat"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="20dp"
        android:gravity="left"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/DialogDate"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/DialogName"
        android:layout_alignParentRight="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="8dp"
        android:text="Date"
        android:gravity="right"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/DialogAmt"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/DialogTreat"
        android:layout_alignParentRight="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="8dp"
        android:text="Amount"
        android:paddingRight="20dp"
        android:gravity="right"
        android:textSize="15sp" />
    <TextView
        android:id="@+id/DialogMob"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/DialogTreat"
        android:layout_alignParentLeft="true"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginBottom="8dp"
        android:text="Mobile"
        android:gravity="left"
        android:paddingLeft="20dp"
        android:textSize="15sp" />
    
    <Button
        android:id="@+id/DialogOk"
        android:layout_width="84dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        android:text="Ok"
        android:layout_alignParentRight="true"
        android:background="@android:color/transparent"
        android:textColor="#2196f3"
        android:layout_below="@id/DialogAmt"
        android:layout_alignStart="@+id/DialogAmt" />
</RelativeLayout>